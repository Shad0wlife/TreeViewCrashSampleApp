        <DataTemplate x:Key="FallbackTemplate">
            <TextBlock Text="Fallback Template used!"/>
        </DataTemplate>
        
        <!-- Debugging Templates for crash free execution -->
        <DataTemplate x:Key="ListNodeTemplate" x:DataType="basemodels:ModelBase">
            <ListViewItem HorizontalContentAlignment="Stretch" RightTapped="ListViewItem_RightTapped">
                <TextBlock Text="{x:Bind MyType, Mode=OneWay}"/>
            </ListViewItem>
        </DataTemplate>

        <DataTemplate x:Key="PointNodeTemplate" x:DataType="basemodels:ModelBase">
            <ListViewItem HorizontalContentAlignment="Stretch" RightTapped="ListViewItem_RightTapped">
                <TextBox Text="{x:Bind MyType, Mode=OneWay}" IsReadOnly="True"/>
            </ListViewItem>
        </DataTemplate>

